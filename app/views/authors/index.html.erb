<h1>Listing Authors<h1>

<%= link_to 'Add author', new_author_path %><br><br>

<table>
	<tr>
		<th>Name</th>
		<th>Homepage</th>
	</tr>
	
	<% @author.each do |author| %>
		<tr>
			<td><%= author.name %></td>
			<td><%= author.homepage %></td>
			<td><%= link_to 'Show', author %></td>
		</tr>
	<% end %>
</table>
