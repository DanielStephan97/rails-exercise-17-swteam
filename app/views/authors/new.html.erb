<h1>New Authors</h1>
<%= form_for :authors, url: authors_path do |f| %>
	<p>
		<%= f.label :firstname %><br>
		<%= f.text_field :text %>
	</p>

	<p>
		<%= f.label :lastname %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.label :homepage %><br>
		<%= f.text_area :text %>

	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>
